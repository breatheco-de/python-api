{
    "name": "python-api",
    "version": 2,
    "builds": [
        {
            "src": "api/**/*.py",
            "use": "@now/python"
        }
    ],
    "routes": [
        {
            "handle": "filesystem"
        },
        {
            "src": "^(/.*)",
            "methods": ["GET","POST"],
            "dest": "api/*/$1.py",
            "continue": true
        }
    ],
    "env": {
        "breathecode_client_id": "@breathecode_client_id",
        "breathecode_client_secret": "@breathecode_client_secret"
    }

}