{
    "name": "flask-microservices-framework",
    "version": 2,
    "builds": [
        {
            "src": "api/**/*.py",
            "use": "@now/python"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "methods": ["POST", "GET"],
            "dest": "api/**/$1.py"
        },
        {
            "src": "/user/(.*)",
            "methods": ["POST", "GET"],
            "dest": "api/user/*.py"
        }
    ]
}