{
    "name": "bc-python-api",
    "version": 2,
    "builds": [
        {
            "src": "api/**/*.py",
            "use": "@now/python"
        }
    ],
    "routes": [
        {
            "handle": "filesystem"
        },
        {
            "src": "^(/.*)",
            "methods": ["GET","POST"],
            "dest": "api/*/$1.py",
            "continue": true
        }
    ],
    "env": {
        "CLIENT_ID": "@client_id",
        "CLIENT_SECRET": "@client_secret"
    },
    "build": {
        "env": {
            "CLIENT_ID": "@client_id",
            "CLIENT_SECRET": "@client_secret"
        }
    }
}